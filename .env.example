# Copy this file to .env and fill in your actual values

# RPC Authentication (required for authenticated endpoints)
# These credentials will be used by chainpulse and relayers
RPC_USERNAME=skip
RPC_PASSWORD=p01kachu?!

# JWT Secret for API authentication
# Generate a secure random string for production
JWT_SECRET=change-this-to-a-secure-random-string

# Grafana Admin Credentials
# Change these for production deployments
GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=change-this-password

# Database passwords (if using external databases)
POSTGRES_PASSWORD=change-this-password
REDIS_PASSWORD=change-this-password

# Relayer Configuration
# Options: hermes, go-relayer
ACTIVE_RELAYER=hermes

